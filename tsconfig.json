{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2019"],
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@shared": ["./shared/"],
      "@shared/*": ["./shared/*"],
      "@config": ["./config/"],
      "@config/*": ["./config/*"],
      "@externalModels/*": ["./external-models/*"],
      "@externalModels": ["./external-models/"],
      "@types/*": ["./types/*"],
      "@types": ["./types/"],
      "@domain/*": ["./domain/*"],
      "@domain": ["./domain/"],
      "@middlewares": ["./middlewares/"],
      "@middlewares/*": ["./middlewares/*"],
      "@api": ["./api/"],
      "@api/*": ["./api/*"]
    }
  },
  "exclude": ["**/*.spec.ts"]
}
